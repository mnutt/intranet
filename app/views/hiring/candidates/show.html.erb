<h2>
  <%=h "#{@candidate.first_name} #{@candidate.last_name}" -%>
</h2>

<div>
  <div class="span-8 border">
    <div class="properties">
      <div>
        <span class="prop_name">Position</span>
        <span class="prop_desc"><%=h @candidate.position -%></span>
      </div>
      <% if @candidate.resume? -%>
        <div>
          <span class="prop_name">Resume</span>
          <span class="prop_desc"><%= link_to image_tag('page.png') + " Download (#{(@candidate.resume_file_size / 1000)}KB)", @candidate.resume.url -%></span>
        </div>
      <% end -%>
      <% if @candidate.website -%>
        <div>
          <span class="prop_name">Website</span>
          <span class="prop_desc"><%= link_to truncate(@candidate.website, 25), @candidate.website, :title => @candidate.website -%></span>
        </div>
      <% end -%>
    </div>
    <div id="add_actions" style="margin: 2em 0;">
      Add
      <span style="margin-left: 0.8em;"><%= link_to image_tag('add.png') + " Phone Screen", new_hiring_candidate_screen_url(@candidate) -%></span>
      <span style="margin-left: 0.8em;"><%= link_to image_tag('add.png') + " Interview", new_hiring_candidate_interview_url(@candidate) -%></span>
      <span style="margin-left: 0.8em;"><%= link_to image_tag('add.png') + " Homework", new_hiring_candidate_homework_url(@candidate) -%></span>
    </div>
    <div id="activity">
      <%= render :partial => "activity", :object => @candidate.activity -%>
    </div>
  </div>
  <div class="span-8 last comments">
    <%= render :partial => 'hiring/comments/add_comment', :object => @candidate, :locals => {:options => {:width => "full"}} -%>
  </div>
</div>

<div style="clear:both;"></div>

<%= link_to 'Edit', edit_hiring_candidate_path(@candidate) %> |
<%= link_to 'Back', hiring_candidates_path %>
